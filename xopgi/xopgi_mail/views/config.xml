<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_general_configuration_mail_alias_domain" model="ir.ui.view">
      <field name="name">base.config.settings.mail.alias</field>
      <field name="model">base.config.settings</field>
      <field name="inherit_id" ref="mail.view_general_configuration_mail_alias_domain"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='email']" position='inside'>
          <div>
            <field name="module_xopgi_mail_forward"/>
            <label for="module_xopgi_mail_forward"/><br/>

            <field name="module_xopgi_mailservers"/>
            <label for="module_xopgi_mailservers"/>
            <br/>
            <field name="module_xopgi_mail_alias_crm"/>
            <label for="module_xopgi_mail_alias_crm"/>
            <br/>
            <field name="module_xopgi_mail_alias_project"/>
            <label for="module_xopgi_mail_alias_project"/>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</openerp>
